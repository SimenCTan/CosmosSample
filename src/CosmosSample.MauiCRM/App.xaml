<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CosmosSample.MauiCRM"
             xmlns:converters="clr-namespace:CosmosSample.MauiCRM.Converters"
             x:Class="CosmosSample.MauiCRM.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary Source="Resources/Styles/DefaultTheme.xaml"/>
            <Color x:Key="PrimaryColor">#512bdf</Color>
            <Color x:Key="SecondaryColor">White</Color>
            <converters:IsNullConverter x:Key="IsNullConverter"/>
            <converters:DurationConverter x:Key="DurationConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
